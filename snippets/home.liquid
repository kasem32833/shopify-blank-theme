<div class="bg-[#f2f0f1]">
  <div class="container">
    <div class="flex items-center pt-6">
      <div class="w-1/2 pr-4">
        <h2 class="text-[64px] leading-[64px] font-bold">FIND CLOTHES THAT MATCHES YOUR STYLE</h2>
        <p class="my-6">
          Browse through our diverse range of meticulously crafted garments, designed to bring out your individuality
          and cater to your sense of style.
        </p>
        <button class="bg-black px-6 py-2 rounded-full text-white cursor-pointer">Shop Now</button>
        <div class="flex -mx-4 mt-12 ">
          {% for i in (1..3) %}
            <div class="w-4/12 px-4">
              <div class="font-bold text-4xl">200+</div>
              <p>International Brands</p>
            </div>
          {% endfor %}
        </div>
      </div>
      <div class="w-1/2 flex justify-end">
        <img width="full" height="full" src="{{ "hero-image.jpeg" | asset_url }}" alt="">
      </div>
    </div>
  </div>
</div>
<div class="bg-black">
  <div class="container">
    <div class="flex py-11">
      {% for i in (1..5) %}
        <div class="flex-1">
          <img width="full" height="full" src="{{ "company-1.png" | asset_url}}" alt="">
        </div>
      {% endfor %}
    </div>
  </div>
</div>
<div class="py-20">
  <div class="container">
    <div class="text-center uppercase text-5xl font-bold mb-8">NEW ARRIVALS</div>
    <div class="flex flex-wrap -mx-4">
      {% for i in (1..4) %}
        <div class=" w-1/4 px-4 single-product-box">
          <div class="bg-gray">
            <img width="full" height="full" src="{{ "product-1.png" | asset_url }}" alt="">
            <h3 class="my-3 font-bold text-xl">T-Shirt With Tape Details</h3>
            <div class="flex items-center my-2">
                <div class="flex mr-2">
                    {% for i in (1..5) %}
                        <svg xmlns="http://www.w3.org/2000/svg" width="19" height="17" viewBox="0 0 19 17" fill="none">
                          <path d="M9.24494 0.255005L11.8641 5.89491L18.0374 6.6431L13.4829 10.8769L14.679 16.9793L9.24494 13.956L3.8109 16.9793L5.00697 10.8769L0.452479 6.6431L6.62573 5.89491L9.24494 0.255005Z" fill="#FFC633"/>
                        </svg>
                    {% endfor %}
                </div>
                <span>4.5</span>
            </div>
            <span class="text-2xl font-bold">$120</span>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="text-center mt-9">
        <button class="border border-gray-200 px-14 py-4 rounded-full  text-xl font-bold ">See All</button>
    </div>
  </div>
</div>
